<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f90539">


        <com.xmyunyou.wcd.ui.view.BackButton
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/back_ico" />

        <TextView
            android:id="@+id/common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="我的积分"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/user_jifen_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/user_jifen_ico" />

        <TextView
            android:id="@+id/user_jifen_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="3425"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/record_tab_text"
            android:layout_marginLeft="5dp"
            android:text="领取方式" />

        <TextView
            style="@style/record_tab_text"
            android:gravity="center"
            android:text="领取时间" />

        <TextView
            style="@style/record_tab_text"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="领取数量" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f90539" />

    <com.xmyunyou.wcd.ui.view.MyScrollView
        android:id="@+id/MyscrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xmyunyou.wcd.ui.view.LoadMoreView
            android:id="@+id/user_jifen_lists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.xmyunyou.wcd.ui.view.LoadMoreView>

    </com.xmyunyou.wcd.ui.view.MyScrollView>


</LinearLayout>
