<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />


    <ImageView
        android:id="@+id/mycar_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        android:background="@drawable/default_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/brand_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/input"
                android:gravity="left|center"
                android:padding="15dp"
                android:text="选择汽车品牌"
                android:textColor="#1C1E20"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/brand_btn"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bottom_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/carline_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/input"
                android:gravity="left|center"
                android:padding="15dp"
                android:text="选择品牌车系"
                android:textColor="#1C1E20"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/carline_btn"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bottom_arrow" />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/cartype"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/input"
            android:gravity="left|center"
            android:padding="15dp"
            android:text="选择车系车型"
            android:textColor="#1C1E20"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/cartype"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bottom_arrow" />

    </RelativeLayout>


    <TextView
        android:id="@+id/save_mycar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="15dp"
        android:background="#35A9DA"
        android:gravity="center"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>
