<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#f90539"
    android:orientation="horizontal">

    <com.xmyunyou.wcd.ui.view.BackButton
        android:id="@+id/btn_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:src="@drawable/back_ico" />

    <TextView
        android:id="@+id/common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/login_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:visibility="gone" />

        <!--评论-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/btn_comment_news"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:src="@drawable/select_comment"
                android:visibility="gone" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/bg_title"
                android:textSize="12sp"
                android:visibility="visible"/>

        </RelativeLayout>

        <!--收藏-->
        <ImageView
            android:id="@+id/btn_fav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            android:padding="8dp"
            android:src="@drawable/selector_news_fav"
            android:visibility="gone" />

        <!--分享-->
        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:padding="8dp"
            android:src="@drawable/ico_share"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/user_settings"
            android:layout_width="45dp"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/setting"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/feedback"
            android:layout_width="45dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/feed_back"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/btn_register"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="gone"

            />

    </LinearLayout>

</RelativeLayout>
