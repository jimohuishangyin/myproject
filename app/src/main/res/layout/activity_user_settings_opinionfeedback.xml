    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xmyunyou.wcd.ui.view.LoadMoreListView
            android:id="@+id/opinion_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#D0D0D0"
            android:dividerHeight="1dp"></com.xmyunyou.wcd.ui.view.LoadMoreListView>
    </LinearLayout>
</LinearLayout>
