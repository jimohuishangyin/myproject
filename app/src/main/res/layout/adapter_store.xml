<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/gaizhuang_store_pic"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gaizhuang_store_pic"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/gaizhuang_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="2dp"
                android:text="北京德奥通汽车改装有限公司"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信誉度："
                    android:textColor="#9D9D9D" />

                <ImageView
                    android:id="@+id/gaizhuang_store_star"
                    android:layout_width="65dp"
                    android:layout_height="15dp"
                    android:src="@drawable/s5" />

            </LinearLayout>

            <TextView
                android:id="@+id/gaizhuang_store_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="类    别：外观内饰改装"
                android:textColor="#9D9D9D" />


        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/gaizhuang_stop_line" />

    <LinearLayout

        android:id="@+id/gaizhuang_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/gaizhuang_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="地点：厦门市体育路36号2号库二层A区"
            android:textColor="#9D9D9D" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/gaizhuang_stop_address" />

    </LinearLayout>


</LinearLayout>
