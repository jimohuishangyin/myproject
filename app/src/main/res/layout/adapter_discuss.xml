<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_car_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型：？？？"
                android:textColor="#BDBDBD"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/adapter_car_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lineSpacingExtra="1.5dp"
                android:maxLines="3"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adapter_car_pic"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_icon" />

            <ImageView
                android:id="@+id/delete_fav_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/adapter_car_pic"
                android:src="@drawable/xx"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/adapter_car_user_pic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/default_icon" />

        <TextView
            android:id="@+id/adapter_car_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/adapter_car_user_pic"
            android:text="一个喜欢速递的人"
            android:textColor="#8DB1BD"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/adapter_car_user_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/adapter_car_user_name"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/adapter_car_user_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:text="2015-02-21"
            android:textColor="#BDBDBD"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/adapter_car_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/adapter_car_user_date"
            android:drawableLeft="@drawable/ico_comment"
            android:text="12"
            android:textColor="#BDBDBD"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="gone"/>

</LinearLayout>