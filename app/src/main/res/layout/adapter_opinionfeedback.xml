<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/opinionfeedback_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:text="意见反馈列表的标题"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/opinionfeedback_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="2015-01-06"
            android:textColor="#BBBBBB" />
    </LinearLayout>

    <TextView
        android:id="@+id/opinionfeedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="下拉刷新原理:重新ListView,addHeaderView(),增加一个头部信息“松开刷新...”类似字样;在OnTouchEvent监听事件中,当触发ACTION_MOVE时,设置headerView的距上的内"
        android:textSize="18sp"
        android:textColor="#797979"/>
    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"/>-->

</LinearLayout>
